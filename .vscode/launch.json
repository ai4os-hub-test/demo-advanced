    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        { // Deep as a Service debug
            "name": "Python: DEEPaaS",
            "type": "python",
            "request": "launch",
            "module": "deepaas.cmd.run",
            "args": [ "--config-file=deepaas.conf" ],
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        },
        { // Data pre processing debug
            "name": "Python: Preprocess data",
            "type": "python",
            "request": "launch",
            "module": "transform_data",
            "args": [
                "--output=debugging_data.npz",
                "--verbosity=DEBUG",
                "data/raw/t10k-images-idx3-ubyte.gz",
                "data/raw/t10k-labels-idx1-ubyte.gz",
            ],
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/data"
            },
        },
        { // Current file debug
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        }
    ]
}